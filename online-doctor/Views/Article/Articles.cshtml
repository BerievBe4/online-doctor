@model IEnumerable<online_doctor.Models.Article>

@{
    ViewData["Title"] = "Articles";
}

<h2>Статьи</h2>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ArticleName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Authors)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Approved)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Authors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Approved)
            </td>
            <td>
                @if (ViewBag.RoleID == 1)
                {
                @Html.ActionLink("Set approved", "SetApproved", new { articleId = item.ArticleId }, new { @class = "btn btn-success" })
                }
                @Html.ActionLink("Подробнее", "ArticleDetail", new { articleId = item.ArticleId }, new { @class = "btn btn-info" })
            </td>
        </tr>
}
    </tbody>
</table>
