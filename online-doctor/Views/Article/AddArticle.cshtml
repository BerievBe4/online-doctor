@model online_doctor.Models.Article

@{
    ViewData["Title"] = "AddArticle";
}

<h2>Добавить статью</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddArticle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ArticleName" class="control-label"></label>
                <input asp-for="ArticleName" class="form-control" />
                <span asp-validation-for="ArticleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArticleText" class="control-label"></label>
                <input asp-for="ArticleText" class="form-control" />
                <span asp-validation-for="ArticleText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Authors" class="control-label"></label>
                <input asp-for="Authors" class="form-control" />
                <span asp-validation-for="Authors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subsections" class="control-label"></label>
                <select asp-for="IdSubsection" asp-items="@(new SelectList(Model.Subsections, "SubsectionId", "SubsectionName"))"></select>
                <span asp-validation-for="Subsections" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="field-validation-error" style="color:brown;">@Html.DisplayFor(model => Model.ErrorMessage)</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить статью" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default">Back to List</a>
</div>

