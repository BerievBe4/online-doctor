@model online_doctor.Models.Subsection

@{
    ViewData["Title"] = "AddSubsection";
}

<h2>Добавить подсекцию</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSubsection">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SubsectionName" class="control-label"></label>
                <input asp-for="SubsectionName" class="form-control" />
                <span asp-validation-for="SubsectionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sections" class="control-label"></label>
                <select asp-for="IdSection" asp-items="@(new SelectList(Model.Sections, "SectionId", "SectionName"))"></select>
                <span asp-validation-for="Sections" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="field-validation-error" style="color:brown;">@Html.DisplayFor(model => Model.ErrorMessage)</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить подсекцию" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default">Back to List</a>
</div>

