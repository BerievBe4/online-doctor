@model IEnumerable<online_doctor.Models.Doctor>

@{
    ViewData["Title"] = "Index";
}

@Html.DropDownList("Id", ViewBag.doctorSpecializations as SelectList)
@Html.DropDownList("Id", ViewBag.sortTypes as SelectList)
@Html.ActionLink("Apply", "SortDoctors", "", new {  }, new { @class = "btn btn-success" })

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FIO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FIO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.ActionLink("More", "More", "Home", new { doctorId = item.DoctorId }, new { @class = "btn btn-info" })
                </td>
            </tr>
        }
    </tbody>
</table>
